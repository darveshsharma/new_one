<!-- app/views/properties/index.html.erb -->

<h1 class="text-2xl font-bold mb-4">All Properties</h1>

<%= link_to 'List New Property', new_property_path, class: "bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 mb-4 inline-block" %>

<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
  <% @properties.each do |property| %>
    <div class="border rounded shadow p-4">
      <h2 class="text-xl font-semibold"><%= property.title %></h2>
      <p class="text-gray-700"><%= truncate(property.description, length: 100) %></p>
      <p><strong>Price:</strong> â‚¹<%= number_with_delimiter(property.price) %></p>
      <p><strong>Location:</strong> <%= property.location %></p>
      <%= link_to 'View Details', property_path(property), class: "text-indigo-600 hover:underline mt-2 block" %>
    </div>
  <% end %>
</div>
