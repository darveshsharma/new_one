<!-- Hero Section -->
<section class="relative text-white py-24 text-center">
  <!-- Background image -->
  <div class="absolute inset-0">
    <img src="https://images.unsplash.com/photo-1599423300746-b62533397364?ixlib=rb-4.0.3&auto=format&fit=crop&w=1350&q=80" alt="Properties Background" class="w-full h-full object-cover"/>
    <div class="absolute inset-0 bg-black opacity-30"></div> <!-- Overlay for readability -->
  </div>

  <div class="relative z-10 container mx-auto px-4">
    <h1 class="text-5xl font-bold mb-4">Properties for Sale</h1>
    <p class="text-lg">Find your perfect property today</p>
  </div>
</section>

<!-- Filters -->
<section class="py-12 bg-white">
  <div class="container mx-auto px-4">
    <form class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <input type="text" placeholder="Search by title or location" class="p-3 border border-gray-300 rounded">
      <select class="p-3 border border-gray-300 rounded">
        <option>Any Type</option>
        <option>Apartment</option>
        <option>Villa</option>
        <option>Plot</option>
      </select>
      <input type="number" placeholder="Min Price" class="p-3 border border-gray-300 rounded">
      <input type="number" placeholder="Max Price" class="p-3 border border-gray-300 rounded">
    </form>
  </div>
</section>

<!-- Properties Grid -->
<section class="bg-gray-100 py-16">
  <div class="max-w-7xl mx-auto px-4 grid grid-cols-1 md:grid-cols-3 gap-12">

    <% @properties.each do |property| %>
      <div class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transform hover:scale-105 transition duration-300">
        
        <div class="relative overflow-visible p-2">
  <% if property.main_image.attached? %>
    <%= image_tag property.main_image, class: "w-full h-64 object-cover rounded-lg shadow-md" %>
  <% else %>
    <%= image_tag "https://via.placeholder.com/400x300?text=No+Image", class: "w-full h-64 object-cover rounded-lg shadow-md" %>
  <% end %>

  <% if property.approved? %>
    <div class="absolute right-2 top-2 z-10">
      <div class="bg-green-500 text-white text-xs font-semibold py-1 px-2 rounded shadow-md">âœ” Verified</div>
    </div>
  <% end %>
</div>

        <div class="p-6 text-center bg-[#354041] text-[#d6ad72">
          <h2 class="text-2xl font-bold mb-2"><%= property.title %></h2>
          <p class="text-lg mb-4">â‚¹<%= number_with_delimiter(property.price) %></p>
<% if user_signed_in? && current_user.active_member? %>
  <%= link_to 'View Details', property_path(property), class: "inline-block bg-[#d6ad72] text-[#354041] px-6 py-2 rounded-full font-semibold hover:bg-[#b48f5c] transition" %>
<% else %>
  <div class="relative group cursor-not-allowed">
  <%= link_to 'View Details', "#", class: "inline-block bg-[#d6ad72] text-[#354041] px-6 py-2 rounded-full font-semibold transition blur-sm pointer-events-none" %>
  
  <!-- Tooltip -->
  <div class="absolute -top-14 left-1/2 transform -translate-x-1/2 w-64 bg-black text-white text-sm rounded-md shadow-lg px-4 py-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-20">
    ðŸš« Only members can view property details.<br/>
    <strong><a href="membership_payments/new" class="underline text-[#d6ad72]">Buy a membership</a></strong> to unlock full access!
    <div class="absolute bottom-[-6px] left-1/2 transform -translate-x-1/2 w-3 h-3 bg-black rotate-45"></div>
  </div>
</div>

<% end %>
        </div>
      </div>
    <% end %>

  </div>

  <!-- List New Property Button -->
  <div class="text-center mt-16">
    <%= link_to 'List New Property', new_property_path, class: "inline-block bg-[#354041] text-white px-8 py-3 rounded-full text-xl font-bold hover:bg-white hover:text-green-900 border border-green-900 transition" %>
  </div>
</section>
