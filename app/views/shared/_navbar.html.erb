            <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A6.5 6.5 0 0112 15a6.5 6.5 0 016.879 2.804M15 10a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          <% end %>

          <%= link_to 'Logout', destroy_user_session_path, method: :delete, data: { turbo: false }, class: "text-red-500 text-lg font-medium" %>
        <% else %>
          <%= link_to 'Home', root_path, class: "text-gray-900 hover:text-indigo-600 text-lg font-medium" %>
          <%= link_to 'Explore', properties_path, class: "text-gray-900 hover:text-indigo-600 text-lg font-medium" %>
