<nav class="bg-white shadow-md">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex">
        <!-- Logo -->
        <div class="flex-shrink-0 flex items-center">
          <%= link_to 'HamaraGroup', root_path, class: "text-xl font-bold text-indigo-600" %>
        </div>

        <!-- Menu Links -->
        <div class="hidden sm:-my-px sm:ml-6 sm:flex sm:space-x-8">
          <% if user_signed_in? %>

            <% if current_user.admin? %>
              <%= link_to 'Admin Dashboard', admin_root_path, class: "text-gray-900 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium" %>
            <% elsif current_user.member? || current_user.owner? || current_user.dealer? %>
              <%= link_to 'Explore Properties', properties_path, class: "text-gray-900 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium" %>
              <%= link_to 'Membership', membership_path, class: "text-gray-900 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium" %>
              <%= link_to 'List Property', new_property_path, class: "text-gray-900 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium" %>
              <%= link_to 'Consultation', consultation_requests_path, class: "text-gray-900 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium" %>
            <% else %>
              <%= link_to 'Home', root_path, class: "text-gray-900 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium" %>
              <%= link_to 'Explore', properties_path, class: "text-gray-900 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium" %>
              <%= link_to 'Consultation', membership_path, class: "text-gray-900 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium" %>
            <% end %>

            <!-- Logout -->
            <%= link_to 'Logout', destroy_user_session_path, method: :delete, data: { confirm: "Are you sure you want to log out?" }, class: "text-red-500 px-3 py-2 rounded-md text-sm font-medium" %>

          <% else %>
            <%= link_to 'Home', root_path, class: "text-gray-900 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium" %>
            <%= link_to 'Explore', properties_path, class: "text-gray-900 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium" %>
            <%= link_to 'Consultation', membership_path, class: "text-gray-900 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium" %>
            <%= link_to 'Login', new_user_session_path, class: "text-gray-900 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium" %>
            <%= link_to 'Register', new_user_registration_path, class: "text-gray-900 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</nav>
