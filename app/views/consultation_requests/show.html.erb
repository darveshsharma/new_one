<div class="max-w-3xl mx-auto py-8">
  <h2 class="text-2xl font-bold mb-6">Consultation Request Details</h2>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900"><%= @consultation_request.property.title %></h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">Service: <%= @consultation_request.service_type %></p>
    </div>

    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Summary</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @consultation_request.summary %></dd>
        </div>

        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Status</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @consultation_request.status %></dd>
        </div>

        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Supporting Document</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <% if @consultation_request.supporting_document&.attached? %>
              <%= link_to "Download Supporting Document", rails_blob_path(@consultation_request.supporting_document, disposition: "attachment"), class: "text-blue-600 hover:text-blue-800 underline" %>
            <% else %>
              No supporting document uploaded.
            <% end %>
          </dd>
        </div>
      </dl>
    </div>
  </div>

  <div class="mt-6">
    <%= link_to "Back", consultation_requests_path, class: "inline-block bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded" %>
  </div>
</div>
