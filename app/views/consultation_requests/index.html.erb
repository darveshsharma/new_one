<div class="max-w-5xl mx-auto py-8">
  <h2 class="text-2xl font-bold mb-6">My Consultation Requests</h2>

  <% if @consultation_requests.any? %>
    <table class="min-w-full bg-white shadow overflow-hidden sm:rounded-lg">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Property</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Service Type</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
          <th class="px-6 py-3"></th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @consultation_requests.each do |request| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap"><%= request.property.title %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= request.service_type %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= request.status %></td>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= link_to "View", consultation_request_path(request), class: "text-indigo-600 hover:text-indigo-900" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>You have no consultation requests yet.</p>
  <% end %>
</div>
