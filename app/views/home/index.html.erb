<%= render 'shared/hero' %>

<div class="container my-10">
  <h2 class="text-3xl font-bold mb-6 text-center text-gray-800">Featured Properties</h2>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <% @properties.each do |property| %>
      <div class="bg-white shadow-lg rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
        <div class="p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2"><%= property.title %></h3>
          <p class="text-gray-700 mb-4"><%= truncate(property.description, length: 100) %></p>
          <p class="text-gray-800 mb-2"><strong>Price:</strong> â‚¹<%= number_with_delimiter(property.price) %></p>
          <p class="text-gray-800 mb-4"><strong>Location:</strong> <%= property.location %></p>
          <%= link_to "View Details", property_path(property), class: "inline-block bg-yellow-500 hover:bg-yellow-600 text-black font-semibold py-2 px-4 rounded" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-10">
    <%= link_to "View All Properties", properties_path, class: "inline-block bg-primary hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded" %>
  </div>
</div>
