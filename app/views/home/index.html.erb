<!-- Underlapping full-screen background image -->
<div class="fixed inset-0 -z-10">
  <img src="https://images.unsplash.com/photo-1568605114967-8130f3a36994?ixlib=rb-4.0.3&ixid=M3w0MTUzNjZ8MHwxfHNlYXJjaHwxfHxsdXh1cnklMjBob3VzZXxlbnwwfHx8fDE2OTU4NjgxODN8MA&auto=format&fit=crop&w=1470&q=80" alt="Background" class="w-full h-full object-cover">
  <div class="absolute inset-0 bg-black opacity-30"></div>
</div>

<div class="relative z-10">

 <!-- First Section -->
 <section class="min-h-screen flex flex-col justify-center items-center text-center px-6 py-8 bg-[#354041]">

  <!-- Logo -->
  <%= image_tag "download.png", alt: "Hamara Group Logo", style: "width: 100%; height: 100%; max-width: 12rem; max-height: 12rem;", class: "mx-auto my-4" %>

  <!-- Main Heading -->
  <h1 class="font-[Manrope] text-[#ccaa79] text-[5em] leading-tight tracking-wide mb-5">
    <strong>Real Estate Redefined</strong>
  </h1>

  <!-- Subheading -->
  <p class="font-[Mulish] text-[#ccaa79] text-[1.875em] leading-snug mb-8">
    We help you find the perfect home.
  </p>

  <!-- Button -->
  <a href="/properties"
     class="bg-[#ccaa79] text-[#354041] px-5 py-4 font-bold text-[1.25em] rounded-md border-[5px] border-double border-[#354041] hover:bg-[#b48f5c] transition"
     target="_blank">
    VIEW PROPERTIES
  </a>

</section>

<!-- Second Section (fully transparent) -->
<section class="min-h-screen flex flex-col justify-center items-center text-white px-4">

</section>

<!-- Third Section: Featured Properties (matched green) -->
<section class="py-20 bg-[#354041] text-[#d6ad72]">
  <h2 class="text-4xl font-bold text-center mb-12">Featured Properties</h2>
  <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8 px-4">
    <div class="text-center">
      <img src="PROPERTY1_URL" alt="Property 1" class="rounded-lg mb-4">
      <h3 class="text-xl font-semibold">12 Country Road, Country</h3>
      <p>2 Bedroom · 1 Bathroom</p>
    </div>
    <div class="text-center">
      <img src="PROPERTY2_URL" alt="Property 2" class="rounded-lg mb-4">
      <h3 class="text-xl font-semibold">34 Sunnyside Avenue, Country</h3>
      <p>4 Bedroom · 3 Bathroom</p>
    </div>
    <div class="text-center">
      <img src="PROPERTY3_URL" alt="Property 3" class="rounded-lg mb-4">
      <h3 class="text-xl font-semibold">56 Greenfields Road, Country</h3>
      <p>3 Bedroom · 2 Bathroom</p>
    </div>
  </div>
</section>

<!-- Fourth Section: Client Testimonials (unchanged) -->
<section class="py-20 bg-[#d6ad72] text-[#354041]">
  <h2 class="text-4xl font-bold text-center mb-12">Client Testimonials</h2>
  <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8 px-4">
    <div class="text-center italic">
      <p>"They patiently explained everything, answered all my questions, and helped me find a house that fit both my budget and my lifestyle."</p>
      <p class="mt-4 font-bold">Jessica K.</p>
    </div>
    <div class="text-center italic">
      <p>"They were also excellent negotiators and secured a great offer for me. I highly recommend them to anyone looking to sell their home quickly and efficiently."</p>
      <p class="mt-4 font-bold">Leon Y.</p>
    </div>
    <div class="text-center italic">
      <p>"Their expertise in the local market is invaluable, and their dedication to their clients is unmatched."</p>
      <p class="mt-4 font-bold">Clint E.</p>
    </div>
  </div>
</section>

</div>
